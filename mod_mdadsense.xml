<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="1.6.0" client="site" method="upgrade">
    <name>MD Adsense</name>
    <author>M. Hiddink</author>
	<creationDate>11-12-2012</creationDate>
	<authorEmail>support@mardinkwebdesign.com</authorEmail>
	<authorUrl>http://www.mardinkwebdesign.com/</authorUrl>
    <version>1.0.0</version>
    <licence>GNU/GPL http://www.gnu.org/licenses/gpl.html</licence>
	<description>MOD_MDADSENSE_DESCRIPTION</description>
	
    <files>
        <filename module="mod_mdadsense">mod_mdadsense.php</filename>
        <filename>index.html</filename>
        <folder>tmpl</folder>
        <folder>languages</folder>
    </files>
 <languages folder="languages">
<language tag="en-GB">en-GB/en-GB.mod_mdadsense.ini</language>
<language tag="en-GB">en-GB/en-GB.mod_mddadsense.sys.ini</language>
<language tag="nl-NL">nl-NL/nl-NL.mod_mdadsense.ini</language>
<language tag="nl-NL">nl-NL/nl-NL.mod_mdadsensee.sys.ini</language>
</languages>   
<config>
<fields name="params">
	<fieldset name="basic">
    	<field name="moduleclass_sfx" type="text" rows="15" default="" label="MOD_MDADSENSE_MCLASS_LABEL" description="MOD_MDADSENSE_MCLASS_DESCR" />
    	<field name="adsense" type="textarea" default="" rows="10" filter="raw" label="Google Adsense code" description="past you google adsense code in this field" />
    	<field name="align" type="radio" class="btn-group" default="2" label="Align Add" description="Select position of add">
    		<option value="1">Left</option>
			<option value="2">Center</option>
			<option value="3">Right</option>
				</field>
				<field type="spacer" name="myspacer" class="text" label="Responsive design settings. Use the settings below to control which devices need to show the module" />
		<field name="phone" type="radio" class="btn-group" default="1" label="Show or Hide on phones" description="Select if the module needs to be shown on a phone">
    		<option value="1">Show</option>
    		<option value="0">Hide</option>
			</field>
		<field name="tablet" type="radio" class="btn-group" default="1" label="Show or Hide on tablets" description="Select if the module needs to be shown on a tablet">
    		<option value="1">Show</option>
    		<option value="0">Hide</option>
			</field>
		<field name="desktop" type="radio" class="btn-group" default="1" label="Show or Hide on desktop" description="Select if the module needs to be shown on a dektop">
    		<option value="1">Show</option>
    		<option value="0">Hide</option>
			</field>			
	</fieldset>
</fields>
</config>
</extension>